@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="jumbotron">
  <h1>Add new Stylist</h1>
</div>

<div class="content">
  @using (Html.BeginForm())
  {
    <div class="row">
      <div class="label">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name)
      </div>
      <div class="label">
        @Html.LabelFor(model => model.Specialty)
        @Html.TextBoxFor(model => model.Specialty)
      </div>
      <input type="submit" value="Add new Stylist" class="btn">
    </div>
  }
</div>
<div class="buttons">
  <btn>@Html.ActionLink("Show all Stylists", "Index")</btn>
</div>