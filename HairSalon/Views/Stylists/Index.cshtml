@{
  Layout ="_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>

<div class="jumbotron">
  <h1>Stylists</h1>
</div>
<div class="content">
  @if (@Model.Count == 0)
  {
    <h3>Stylists haven't been added yet</h3>
  }
  <ul>
    @foreach(Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId})</li>
    }
  </ul>
</div>
<div class="buttons">
  <btn>@Html.ActionLink("Add a new Stylist", "Create")</btn>
  <br>
  <btn>@Html.ActionLink("Home", "Index", "Home")</btn>
</div>