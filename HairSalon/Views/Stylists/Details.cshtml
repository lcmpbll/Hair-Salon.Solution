@{
  Layout="_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist

<div class="jumbotron">
  <h1>Stylist: @Html.DisplayFor(model => model.Name)</h1>
</div>

<hr />
<div class="content">
  <h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h3>
  <hr />
  <h2>Clients:</h2>

  @foreach(Client client in Model.Clients)
  {
    <li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</li>
  }

</div>
<div class="buttons">
  <btn>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId})</btn>
  <br>
  <btn>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId})</btn>
  <br>
  <btn>@Html.ActionLink("View all Stylists", "Index")</btn>
</div>