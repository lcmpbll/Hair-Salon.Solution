@{
  Layout="_Layout";
}

@model HairSalon.Models.Stylist

<div class="jumbotron">
  <h1>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h1>
</div>

<hr />
<div class="content">
  <h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h3>
</div>
<div class="buttons">
  <btn>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId})</btn>
  <br>
  <btn>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId})</btn>
  <br>
  <btn>@Html.ActionLink("Back to all Stylists", "Index")</btn>
</div>